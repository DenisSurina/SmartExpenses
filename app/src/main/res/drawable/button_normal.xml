<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Button background color -->
            <!-- Define other sides with no border or transparent border -->
        </shape>
    </item>
    <item android:top="-2dp" android:right="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="?attr/background_primary"/> <!-- Transparent border -->
            <solid android:color="?attr/background_primary"/>
        </shape>
    </item>
</layer-list>
